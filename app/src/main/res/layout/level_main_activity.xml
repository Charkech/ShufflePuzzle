<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/pinkbg"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/imgAppName"
        style="@style/CustomTextView"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:fontFamily="@font/cherry_cream_soda"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textSize="30sp"
        android:textStyle="bold" />
    <ImageView
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/imgAppName"
        android:src="@drawable/backgroundpieces"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewStages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imgAppName"
        android:layout_above="@+id/linearAdsBanner">

    </androidx.recyclerview.widget.RecyclerView>
